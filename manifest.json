{
  "manifest_version": 3,
  "name": "Twitter Takip Edilmeyen Bulucu",
  "version": "1.0",
  "description": "Twitter'da sizi takip etmeyen kullanıcıları bulur",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "action": {
    "default_title": "Twitter Takip Analizi"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
